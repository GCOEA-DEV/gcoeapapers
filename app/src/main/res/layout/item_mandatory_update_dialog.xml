<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/bg_corners_color_darkest"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Update Available"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/mandetory_update_dialog_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="This App version is no longer supported.Please Update to continue." />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:visibility="gone"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/mandetory_update_dialog_progressroot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ProgressBar
                android:id="@+id/mandetory_update_dialog_progressbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:focusableInTouchMode="false"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:indeterminate="true"
                android:foregroundGravity="center_vertical"
                android:progressDrawable="@drawable/progress_bar" />

            <TextView
                android:id="@+id/mandetory_update_dialog_progresstv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:focusableInTouchMode="false"
                android:text="0%"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mandetory_update_dialog_update_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_dialog"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="UPDATE" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>